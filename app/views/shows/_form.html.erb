<%= form_for @show do |f| %>
  <h3>Create your show</h3>

  <% @show.errors.full_messages.each do |msg| %>
    <div class="alert-message error">
      <p>
        <%= msg %>
      </p>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :hashtag, "Twitter Hashtag" %>
    <div class="input">
      <%= f.text_field :hashtag %>
    </div>
  </div>
  <div class="field">
    <%= f.label :admin_name, "Admin Name" %>
    <div class="input">
      <%= f.text_field :admin_name %>
    </div>
  </div>
  <div class="field">
    <%= f.label :admin_password, "Admin Password" %>
    <div class="input">
      <%= f.password_field :admin_password %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit :class => "primary btn large" %>
  </div>
<% end %>
